<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for unselected state -->
        </shape>
    </item>

    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fb_blue" /> <!-- Use your desired blue color here -->
        </shape>
    </item>
</selector>
